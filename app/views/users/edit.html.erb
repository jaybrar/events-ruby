<% content_for :title do %>Profile<% end %>
<%= render :partial => "events/nav" %>
<div class='row'>
	<div class="col-lg-4">
		<h1>Edit Profile</h1>
<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p style="color:red"><%= e %></p>
  <% end %>
<% end %>
		<form action='/users/<%=@user.id%>' method='post'>
			<div class="form-group">
				<label for="name">First_name</label>
				<input type="text" name="edit[first_name]" class="form-control" id="first_name" value="<%=@user.first_name%>">
				<input type='hidden' name="_method" value="patch">
			</div>
			<div class="form-group">
				<label for="name">Last_name</label>
				<input type="text" name="edit[last_name]" class="form-control" id="last_name" value="<%=@user.last_name%>">
			</div>
			<div class="form-group">
				<label for="exampleInputEmail1">Email address</label>
				<input type="email" name="edit[email]" class="form-control" id="Email" value="<%=@user.email%>">
				<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
			</div>
			<div class="form-group">
				<label for="group">Group Name</label>
				<input type="text" name="edit[group]" class="form-control" id="group" value="<%=@user.group%>">
			</div>
			<div class="form-group">
				<label for="group">Street Address</label>
				<input type="text" name="edit[address]" class="form-control" id="street" value="<%=@user.address%>">
			</div>
			<div class="form-group">
				<label for="name">City</label>
				<input type="text" name="edit[location]" class="form-control" id="location" value="<%=@user.location%>">
			</div>
			<div class="form-group">
				<label for="name">State</label>
				<select name="edit[state]">
					<% us_states.each do |state| %>
					<option value="<%=state[1]%>" <% if @user.state==state[1]%><%='selected'%><%end%>><%= state[1] %></option>
					<% end %>
				</select>
			</div>
			<button type="submit" class="btn btn-primary">Update</button>
		</form>
	</div>
</div>