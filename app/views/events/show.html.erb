<div class='row'>
	<div class='col-lg-8'>
		<nav class="navbar navbar-default">
			<h3 style="display:inline-block">Events Blog</h3>
			<a href="/events"><button class="btn btn-info">Events Dashboard</button></a>
			<form class="navbar-form navbar-right" action='/sessions' method='post'>
			  <div class="form-group">
			  	<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
			    <input type='hidden' name='_method' value='delete'>
			  </div>
			  <button type="submit" class="btn btn-warning">Log Out</button>
			</form>
		</nav>
	</div>
</div>

<div class="row">
	<div class='col-lg-4'>
		<h2><%=@event.name%></h2>
		<p>Host: <%=@event.user.first_name%> <%=@event.user.last_name%></p>
		<p>Date: <%=@event.date%></p>
		<p>Location: <%=@event.location%>, <%=@event.state%></p>
		<p>People who are joining the event: <%=@count%></p>
		<table class="table table-striped table-bordered">
			<tr>
				<th>Name</th>
				<th>Location</th>
				<th>State</th>
			</tr>
			<% @attendees.each do |attendee|%>
			<tr>
				<td><%=attendee.first_name%> <%=attendee.last_name%></td>
				<td><%=attendee.location%></td>
				<td><%=attendee.state%></td>
			</tr>
			<% end %>
		</table>
	</div>
	<div class='col-lg-4'>
		<h3>Discussions about this event:</h3>
		<div id="comments">
		<% @comments.each do |comment| %>
		<p><%=comment.user.first_name%> says: <%=comment.content%></p>
		<hr>
		<% end %>
		</div>
<!-- ********************** add comment *********************** -->
<% if flash[:error] %>
  <% flash[:error].each do |e| %>
    <p style="color:red"><%= e %></p>
  <% end %>
<% end %>
		<form action='/comments/<%=@event.id%>' method='post'>
			<div class="form-group">
				<label for="comment">Add Comment</label>
				<input type="text" name="content" class="form-control" id="comment" placeholder="comment">
				<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
			</div>
			<button type="submit" class="btn btn-success pull-right">Add Comment</button>
		</form>
	</div>
</div>

