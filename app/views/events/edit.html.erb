<% content_for :title do %>Edit Event<% end %>
<%= render :partial => "events/nav" %>
<div class="row">
<div class="col-lg-8">
	<h2>Edit Event</h2>
	<% if flash[:errors] %>
	<% flash[:errors].each do |error| %>
	<p style="color:red"><%= error %></p>
	<% end %>
	<% end %>
	<form action='/events/<%= @event.id %>' method='post'>
			<div class="form-group">
				<label for="name">Name</label>
				<input type="text" name="edit[name]" class="form-control" id="name" value="<%=@event.name%>">
				<input type="hidden" name="_method" value="patch">
			</div>
			<div class="form-group">
				<label for="name">Date</label>
				<input type="date" name="edit[date]" value="<%=@event.date.strftime('%Y-%m-%d')%>" class="form-control" id="date">
			</div>
			<div class="form-group">
				<label for="location">Address</label>
				<input type="text" name="edit[address]" class="form-control" id="address" value="<%=@event.address%>">
			</div>
			<div class="form-group">
				<label for="location">Location</label>
				<input type="text" name="edit[location]" class="form-control" id="Email" value="<%=@event.location%>">
				<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
			</div>
			<div class="form-group">
				<label for="name">State</label>
				<select name="edit[state]">
					<% us_states.each do |state| %>
					<option value="<%=state[1]%>" 
						<% if @event.state==state[1]%>
						<%='selected'%>
						<%end%>
						><%=state[1]%>
					</option>
					<% end %>
				</select>
			</div>
			<button type="submit" class="btn btn-primary">Update Event</button>
		</form>
</div>
</div>